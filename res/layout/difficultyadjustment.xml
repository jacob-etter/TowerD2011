<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:background="@drawable/menuwallpaper">
	<TextView android:id="@+id/textView1" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textColor="#ffffff"
		android:text="Difficulty Adjustments" android:layout_gravity="center_horizontal"
		android:textSize="30dip"></TextView>
	<TableRow android:id="@+id/TableRow01" android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent"
			android:layout_weight="1" android:id="@+id/TextView01"
			android:textColor="#ffffff" android:layout_height="wrap_content"
			android:text="InitialSpawnTimer" android:textSize="25dip"></TextView>
		<EditText android:inputType="number" android:layout_width="fill_parent"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:id="@+id/EditTextTimer"></EditText>
		<Button android:layout_height="wrap_content" android:text="Set"
			android:layout_width="50dip" android:id="@+id/ButtonTimer"></Button>
	</TableRow>
	<TableRow android:id="@+id/TableRow02" android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent" 
			android:layout_weight="1" android:id="@+id/TextView02"
			android:textColor="#ffffff" android:layout_height="wrap_content"
			android:text="DifficultyIncrease" android:textSize="25dip"></TextView>
		<EditText android:inputType="number" android:layout_width="fill_parent"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:id="@+id/EditTextDifficulty"></EditText>
		<Button android:layout_height="wrap_content" android:id="@+id/ButtonDifficulty"
			android:text="Set" android:layout_width="50dip"></Button>
	</TableRow>
	<TableRow android:id="@+id/tableRow1" android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView android:layout_width="fill_parent"
			android:layout_weight="1" android:id="@+id/textView2"
			android:layout_height="wrap_content" android:textColor="#ffffff"
			android:text="InitialSpawnCount" android:textSize="25dip"></TextView>
		<EditText android:inputType="number" android:layout_width="fill_parent"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:id="@+id/EditTextCount"></EditText>
		<Button android:layout_height="wrap_content" android:id="@+id/ButtonCount"
			android:layout_gravity="center" android:text="Set"
			android:layout_width="50dip"></Button>
	</TableRow>
	<TableRow android:id="@+id/TableRow03" android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView android:textSize="25dip" android:layout_width="fill_parent"
			android:layout_weight="1" android:id="@+id/TextView03"
			android:textColor="#ffffff" android:layout_height="wrap_content"
			android:text="InitalMoneyValue"></TextView>
		<EditText android:layout_width="fill_parent"
			android:layout_weight="1" android:inputType="number"
			android:layout_height="wrap_content" android:id="@+id/EditTextMoney"></EditText>
		<Button android:layout_width="50dip" android:layout_gravity="center"
			android:layout_height="wrap_content" android:text="Set" android:id="@+id/ButtonMoney"></Button>
	</TableRow>
	<TableRow android:id="@+id/TableRow04" android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView android:textSize="25dip" android:layout_width="fill_parent"
			android:layout_weight="1" android:id="@+id/TextView04"
			android:textColor="#ffffff" android:layout_height="wrap_content"
			android:text="InitialLivesCount"></TextView>
		<EditText android:layout_width="fill_parent"
			android:layout_weight="1" android:inputType="number"
			android:layout_height="wrap_content" android:id="@+id/EditTextLives"></EditText>
		<Button android:layout_width="50dip" android:layout_gravity="center"
			android:layout_height="wrap_content" android:text="Set" android:id="@+id/ButtonLives"></Button>
	</TableRow>
	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout1" android:layout_height="wrap_content"
		android:orientation="vertical">
		<Button android:layout_gravity="center_horizontal"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:id="@+id/ButtonClear" android:text="Reset All"></Button>
	</LinearLayout>
</LinearLayout>
