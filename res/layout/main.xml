<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:screenOrientation="landscape" android:layout_width="match_parent"
	android:layout_height="match_parent" android:orientation="vertical"
	android:background="@drawable/menubackground3">
	<TextView android:text="   Tower   Defense" android:id="@+id/TextView02"
		android:textColor="#ffffff" android:paddingLeft="35dip"
		android:layout_width="match_parent" android:textSize="25dip"
		android:gravity="center" android:paddingRight="35dip"
		android:textStyle="bold" android:layout_height="fill_parent"
		android:layout_marginTop="30dip" android:layout_weight="1.3"></TextView>
	<TableRow android:layout_width="match_parent" android:id="@+id/tableRow1"
		android:layout_gravity="center_vertical|center_horizontal"
		android:layout_height="fill_parent" android:layout_weight="1">
		<Button android:layout_marginLeft="50dip" android:text="Play"
			android:layout_marginRight="150dip" android:layout_height="wrap_content"
			android:layout_weight="1" android:textColor="#ffffff" android:id="@+id/playButton"
			android:gravity="center_vertical|center_horizontal" android:textSize="18dip"
			android:layout_gravity="left|center_vertical" android:layout_width="50dip"></Button>
		<Button android:layout_marginLeft="25dip" android:text="Options"
			android:layout_marginRight="50dip" android:layout_height="wrap_content"
			android:layout_weight="1" android:textColor="#ffffff" android:id="@+id/optionsButton"
			android:gravity="center_vertical|center_horizontal" android:textSize="18dip"
			android:layout_gravity="left|center_vertical" android:layout_width="50dip"></Button>
	</TableRow>
	<TextView android:id="@+id/TextView01" android:textColor="#ffffff"
		android:paddingLeft="35dip" android:layout_width="match_parent"
		android:gravity="center" android:paddingRight="35dip"
		android:textStyle="bold" android:layout_height="fill_parent"
		android:text="@string/credit" android:textSize="10dip"
		android:layout_marginBottom="40dip" android:layout_weight="1.2"></TextView>
</LinearLayout> 
